{
  "name": "blank_electron_template",
  "version": "1.0.0",
  "description": "Blank electron template",
  "main": "main.js",
  "author": {
    "name": "Anthonym",
    "email": "samuelmatheson20@gmail.com"
  },
  "homepage": "https://null.none",
  "repository": {
    "type": "git",
    "url": "https://github.com"
  },
  "icon": "assets/icons/icon.png",
  "license": "ISC",
  "bin": "BB01",
  "scripts": {
    "start": "electron main.js",
    "packager-win": "electron-packager ./ --overwrite --asar --platform=win32 --arch=all --icon=assets/icons/icon.ico --prune=true --out=dist --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"blank electron template\"",
    "packager-linux": "electron-packager ./ timetable --overwrite --asar --platform=linux --arch=all --icon=assets/icons/256x256.png --prune=true --out=release",
    "packager-mac": "electron-packager ./ --overwrite --platform=darwin --arch=all --icon=assets/icons/256x256.png --prune=true --out=dist",
    "deb-linux": "electron-installer-debian --src dist/{output-folder}/ --arch amd64 --config debian.json",
    "postinstall": "electron-builder install-app-deps",
    "builder-default": "electron-builder",
    "builder-linux": "electron-builder --linux deb appimage tar.xz snap",
    "builder-win": "electron-builder --win --x64 --ia32"
  },
  "build": {
    "appId": "com.blank.electron",
    "icon": "assets/icons/icon.png",
    "productName": "blank electron template",
    "copyright": "Copyright © 2020 ${author}",
    "buildVersion": "1.0.0",
    "remoteBuild": "true",
    "asar": "true",
    "mac": {
      "category": "utility",
      "icon": "assets/icons/icon.png"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icons/icon.ico"
    },
    "linux": {
      "target": "deb",
      "category": "utility",
      "icon": "assets/icons/icon.png"
    }
  },
  "devDependencies": {
    "asar": "^1.0.0",
    "electron": "^9.2.1"
  },
  "dependencies": {
    "electron-store": "^5.2.0",
    "electron-window-state": "^5.0.3"
  }
}
